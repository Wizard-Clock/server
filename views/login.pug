doctype html
html
    head
        title Wizarding Clock - #{title}
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
        script.
            function showPassword() {
                let x = document.getElementById("current-password");
                if (x.type === "password") {
                    x.type = "text";
                } else {
                    x.type = "password";
                }
            }
    body()
        div(class="container-sm vh-100 d-flex justify-content-center align-items-center")
            div(class="p-5 rounded border")
                div(class="text-center")
                    h1(class="mb-3")
                        img(src="images/wizarding-clock-high-resolution-logo-transparent.svg" width="400px" height="70px" alt="Wizarding Clock")
                if errorMsg
                    div(id="errorDiv")
                        div(class="alert alert-danger") #{errorMsg}
                form(action="/auth/login" method="post" class="justify-content-center align-items-center")
                    div(class="form-group p-3")
                        section()
                            label(for="username") Username:
                            input(type="text" id="username" name="username" class="form-control" placeholder="Enter username" required autofocus)
                    div(class="form-group p-3")
                        section()
                            label(for="current-password") Password:
                            input(type="password" id="current-password" name="password" class="form-control" placeholder="Enter password" required)
                        input(type="checkbox" id="passwordTog" onclick="showPassword()")
                        label(for="passwordTog") &nbsp;Show Password
                    div(class="text-center pt-3")
                        input(type="submit" class="btn btn-primary" value="Submit")