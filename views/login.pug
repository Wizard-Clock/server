doctype html
html
    head
        title Wizarding Clock - #{title}
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
        script.
            function showPassword() {
                let x = document.getElementById("passwordInput");
                if (x.type === "password") {
                    x.type = "text";
                } else {
                    x.type = "password";
                }
            }
            function checkLoginError() {
                console.log(sessionStorage)
                if (sessionStorage) {
                    document.getElementById('errorDiv').style.display = 'block';
                } else {
                    document.getElementById('errorDiv').style.display = "none";
                }
            }
    body( onload="checkLoginError()")
        div(class="container-sm vh-100 d-flex justify-content-center align-items-center")
            div(class="p-5 rounded border")
                div(class="text-center")
                    h1(class="mb-3")
                        img(src="images/wizarding-clock-high-resolution-logo-transparent.svg" width="400px" height="70px" alt="Wizarding Clock")
                div(id="errorDiv")
                    div(class="alert alert-danger") Invalid Email or Password
                form(id="loginForm" action="/auth/login" method="post" class="justify-content-center align-items-center")
                    div(class="form-group p-3")
                        label(for="identityInput") Username / Email:
                        input(type="text" id="identityInput" name="identity" class="form-control" placeholder="Enter username/email" required autofocus)
                    div(class="form-group p-3")
                        label(for="passwordInput") Password:
                        input(type="password" id="passwordInput" name="password" class="form-control" placeholder="Enter password" required)
                        input(type="checkbox" id="passwordTog" onclick="showPassword()")
                        label(for="passwordTog") &nbsp;Show Password
                    div(class="text-center pt-3")
                        input(type="submit" class="btn btn-primary" value="Submit")