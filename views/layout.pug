doctype html
html
  head
    title Wizarding Clock - #{title}
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(rel='stylesheet', href='stylesheets/style.css')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')
    link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Aboreto&display=swap")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
  body()
    div(class="navbar navbar-expand-sm bg-light navbar-light")
      div(class="container-fluid")
        a(class="navbar-brand" href="#")
          img(src="images/wc-high-resolution-logo-transparent.svg" width="65px" height="65px" alt="small transparent logo")
        button(class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar")
          span(class="navbar-toggler-icon")
        div(class="collapse navbar-collapse" id="collapsibleNavbar")
          ul(class="navbar-nav")
            li(class="nav-item")
              a(class="nav-link brand_font" href="#") Wizards
            li(class="nav-item")
              a(class="nav-link brand_font" href="#") Locations
            li(class="nav-item dropdown")
              a(class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown") #{username}
              ul(class="dropdown-menu")
                if role === "admin"
                  li()
                    a(class="dropdown-item brand_font" href="#") Server Settings
                li()
                  a(class="dropdown-item brand_font" href="#") Account Settings
                li()
                  a(class="dropdown-item brand_font" href="#" onclick="document.forms[\"logoutForm\"].submit();") Logout
                  form(name='logoutForm' action='/auth/logout' method='post')
                    input(type="hidden")
    block content
